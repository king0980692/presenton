    {
      "id": "general:chart-with-bullets-slide",
      "name": "Chart with Bullet Boxes",
      "description": "A slide layout with title, description, chart on the left and colored bullet boxes with icons on the right. Only choose this if data is available.",
      "json_schema": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object",
        "properties": {
          "title": {
            "description": "Main title of the slide",
            "type": "string",
            "minLength": 3,
            "maxLength": 40
          },
          "description": {
            "description": "Description text below the title",
            "type": "string",
            "minLength": 10,
            "maxLength": 150
          },
          "chartData": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "type": {
                    "anyOf": [
                      {
                        "type": "string",
                        "const": "bar"
                      },
                      {
                        "type": "string",
                        "const": "pie"
                      },
                      {
                        "type": "string",
                        "const": "line"
                      },
                      {
                        "type": "string",
                        "const": "area"
                      }
                    ]
                  },
                  "data": {
                    "minItems": 2,
                    "maxItems": 5,
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "description": "Data point name",
                          "type": "string"
                        },
                        "value": {
                          "description": "Data point value",
                          "type": "number"
                        }
                      },
                      "required": [
                        "name",
                        "value"
                      ],
                      "additionalProperties": false
                    }
                  }
                },
                "required": [
                  "type",
                  "data"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "scatter"
                  },
                  "data": {
                    "minItems": 2,
                    "maxItems": 20,
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "x": {
                          "description": "X coordinate",
                          "type": "number"
                        },
                        "y": {
                          "description": "Y coordinate",
                          "type": "number"
                        }
                      },
                      "required": [
                        "x",
                        "y"
                      ],
                      "additionalProperties": false
                    }
                  }
                },
                "required": [
                  "type",
                  "data"
                ],
                "additionalProperties": false
              }
            ]
          },
          "color": {
            "description": "Primary color for chart elements",
            "type": "string"
          },
          "showLegend": {
            "description": "Whether to show chart legend",
            "type": "boolean"
          },
          "showTooltip": {
            "description": "Whether to show chart tooltip",
            "type": "boolean"
          },
          "bulletPoints": {
            "description": "List of bullet points with colored boxes and icons",
            "minItems": 1,
            "maxItems": 3,
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {
                  "description": "Bullet point title",
                  "type": "string",
                  "minLength": 2,
                  "maxLength": 80
                },
                "description": {
                  "description": "Bullet point description",
                  "type": "string",
                  "minLength": 10,
                  "maxLength": 150
                },
                "icon": {
                  "type": "object",
                  "properties": {
                    "__icon_url__": {
                      "description": "URL to icon",
                      "type": "string"
                    },
                    "__icon_query__": {
                      "type": "string",
                      "minLength": 5,
                      "maxLength": 20
                    }
                  },
                  "required": [
                    "__icon_url__",
                    "__icon_query__"
                  ],
                  "additionalProperties": false
                }
              },
              "required": [
                "title",
                "description",
                "icon"
              ],
              "additionalProperties": false
            }
          }
        },
        "required": [
          "title",
          "description",
          "chartData",
          "color",
          "showLegend",
          "showTooltip",
          "bulletPoints"
        ],
        "additionalProperties": false
      }
